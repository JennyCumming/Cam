{#
/**
 * The Card component
 *
 * heading - a required string
 * sub_heading - an optional string
 * description - an optional string
 * image - required
 * link - URL required (1 link only)
 */
 #}

<a href="{{ link }}" class="border-b-1 hover:bg-stone-100 transition-colors duration-300 min-h-[300px] flex flex-col gap-3 self-stretch relative flex-1">
    {{ image }}
    <div class="pb-4">
      {% if subheading %}
        <p class="text-lg font-semibold text-[#4B5563]">{{ subheading }}</p>
      {% endif %}
      {% if heading %}
        <h3 class="text-xl font-semibold">{{ heading }}</h3>
      {% endif %}
    </div>
    {% if description %}
      <p class="text-sm text-gray-700 pr-10">{{ description }}</p>
    {% endif %}
</a>
