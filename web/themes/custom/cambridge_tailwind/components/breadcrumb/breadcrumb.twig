  <nav class="breadcrumbs container py-4" role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ol class="flex gap-2">
      <li class="crumb">
        <a class="underline hover:no-underline" href="/">Home</a>
      </li>
    {% for item in breadcrumb %}
      <li class="crumb">
        {% if item %}
          <a class="underline hover:no-underline" href="{{ item.url }}">{{ item.text }}</a>
        {% else %}
          {{ item.text }}
        {% endif %}
      </li>
    {% endfor %}
    </ol>
  </nav>
