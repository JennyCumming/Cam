{#
/**
 * Puts an external link icon if link is external
 */
#}
{% set link_base_class = link_base_class|default('link') %}

{% set external = item.content['#url'].external %}

<div class="px-[16px] border-b-1 no-underline hover:underline flex items-center">
	<a {% for attribute, value in link_attributes %} {{ attribute }}="{{ value }}" {% endfor %} href="{{item.content['#url']}}" class="">
		{{item.content['#title']}}
	</a>
	{% if external %}

			<svg focusable="false" aria-hidden="true" width="16" height="16" viewbox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="ml-1">
				<path d="M6.66669 3.99999H4.00002C3.6464 3.99999 3.30726 4.14047 3.05721 4.39051C2.80716 4.64056 2.66669 4.9797 2.66669 5.33332V12C2.66669 12.3536 2.80716 12.6928 3.05721 12.9428C3.30726 13.1928 3.6464 13.3333 4.00002 13.3333H10.6667C11.0203 13.3333 11.3594 13.1928 11.6095 12.9428C11.8595 12.6928 12 12.3536 12 12V9.33332M9.33335 2.66666H13.3334M13.3334 2.66666V6.66666M13.3334 2.66666L6.66669 9.33332" {% if dark %} stroke="white" {% else %} stroke="black" {% endif %} stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round"/>
			</svg>

	{% endif %}




</div>
