{#
/**
* The Topper component is the introduction to the basic page. It houses the page title (h1) and an optional description.
*
* Title - a required string of the page title, rendered as an h1 element
* Description - an optional string
*/
#}

<div class="bg-[#F3F4F6]">
    <div class="mx-auto max-w-[672px] px-[32px] py-[64px]">
        <h1 class="text-heading-title font-serif mb-[24px]">{{ title }}</h1>
        {% if description %}
            <p class="text-base">{{ description }}</p>
        {% endif %}
    </div>
</div>
