{#
/**
* The notification component highlights information to the user that is important and shouldn’t be skipped. This could be information about other resources or a warning before proceeding for example.
*
* Notification text - a required piece of rich text (can contain links)
* Notification type - “information” | “warning“ - the importance of the message, the variant drives the style choices such as the background colour and the icon.
*
*/
#}

{% set notification_type = notification_type|lower|striptags %}

{% set bg_class = 'bg-blue-50' %}
{% set border_class = 'bg-blue-200' %}
{% if notification_type == 'warning' %}
{% set bg_class = 'bg-red-50' %}
{% set border_class = 'bg-red-200' %}
{% endif %}

<div class="relative mb-[48px] overflow-hidden">
    <div class="{{ bg_class }} rounded px-[32px] py-[12px] flex flex-row gap-[12px] text-[17px] font-medium">
        <div class="w-[24px] flex-shrink-0">
            {% if notification_type == 'warning' %}
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#000000" viewBox="0 0 256 256">
                <path d="M236.8,188.09,149.35,36.22h0a24.76,24.76,0,0,0-42.7,0L19.2,188.09a23.51,23.51,0,0,0,0,23.72A24.35,24.35,0,0,0,40.55,224h174.9a24.35,24.35,0,0,0,21.33-12.19A23.51,23.51,0,0,0,236.8,188.09ZM222.93,203.8a8.5,8.5,0,0,1-7.48,4.2H40.55a8.5,8.5,0,0,1-7.48-4.2,7.59,7.59,0,0,1,0-7.72L120.52,44.21a8.75,8.75,0,0,1,15,0l87.45,151.87A7.59,7.59,0,0,1,222.93,203.8ZM120,144V104a8,8,0,0,1,16,0v40a8,8,0,0,1-16,0Zm20,36a12,12,0,1,1-12-12A12,12,0,0,1,140,180Z"></path>
            </svg>
            {% else %}
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256">
                <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm16-40a8,8,0,0,1-8,8,16,16,0,0,1-16-16V128a8,8,0,0,1,0-16,16,16,0,0,1,16,16v40A8,8,0,0,1,144,176ZM112,84a12,12,0,1,1,12,12A12,12,0,0,1,112,84Z"></path>
            </svg>
            {% endif %}
        </div>
        <div class="flex-grow text-formatted">{{ notification_text }}</div>
    </div>
    <div class="w-[4px] absolute left-0 top-0 h-full {{border_class}} rounded-l"></div>
</div>
